<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.CustomViewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.example.kotlinstudy.view.CustomTitleBar
            android:id="@+id/custom_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            apps:title_text="@string/app_name"
            apps:text_color="@color/snow"
            apps:bg_color = "@color/skyblue" />

        <com.example.kotlinstudy.view.CustomView
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <com.example.kotlinstudy.view.CustomSurfaceView
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <com.example.kotlinstudy.view.SyncImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/custom_sync_view"/>
    </LinearLayout>
</layout>